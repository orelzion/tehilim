    <color name="gmail_color">#c0392b</color>
    <color name="git_color">#f14e32</color>

    <color name="flat_pressed">#66999999</color>
    <color name="flat_disabled_text">#40000000</color>
    <color name="flat_normal_text">#000000</color>

